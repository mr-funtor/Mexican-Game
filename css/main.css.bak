*{
	margin:0;
	padding:0;
	box-sizing:border-box;
}

body{
	background:red;
	height:100vh;
	width:100%;
}

main{
	background:pink;
	width:100%;
	height:100%;
}

#playing-area{
	background:coral;
	width:60%;
	height: 100%;
	margin:auto;
	
	display:grid;
	grid-template-rows: 1fr 2fr 1fr;
	
}

#second-player{
	background: yellow;
	height:100%;
	width:100%;
}
