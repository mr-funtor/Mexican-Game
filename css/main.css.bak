*{
	margin:0;
	padding:0;
	box-sizing:border-box;
}

body{
	/* background:red; */
	height:100vh;
	width:100%;
}

main{
	/* background:pink; */
	width:100%;
	height:100%;
}

#playing-area{
	/* background:coral; */
	width:60%;
	height: 100%;
	margin:auto;
	padding: 10px 0px;
	display:grid;
	grid-template-rows: 0.6fr 2fr 1fr;
	
}

#game-play-panel{
	background:yellow;
	height: 80%;
	margin:auto;
	width:100%;
	display: flex;
	justify-content:space-around;
	align-items:center;
}

#loteria-button{
	width:130px;
	height: 40px;
	font-size: 22px;
	border:none;
	/* box-shadow: 2px 2px 2px 1px grey,-2px -2px 2px 0.5px grey; */
	cursor:pointer;
}

#card-table{
	display:flex;
	justify-content:center;
	align-items:center;
}

#second-player,
#first-player{
	/* background: yellow; */
	height:100%;
	width:100%;
	display:grid;
	grid-template-columns:repeat(5,1fr);
	grid-column-gap: 10px;
}

.playing-card{
	background:url(../images/2.png) 0px/cover no-repeat;
	background-size: 100px;
	background-position:center;
	height:100%;
	width:100%;
	border:none;
	border-radius:10px;
	overflow:hidden;
	
	cursor:pointer;
	
}

.playing-card-table{
	background: 0px/cover no-repeat;
	background-size: 120px;
	background-position:center;
	
	
	height: 200px;
	width:180px;
	
	border:none;
	border-radius:10px;
	overflow:hidden;
}


/* THE HOME PAGE */
.the-homepage{
	background: skyblue;
	position:fixed;
	height:100%;
	width:100%;
}



@media(max-width:1000px){
	#playing-area{
		width:80%;
		height: 100%;
	}
}

@media(max-width:700px){
	#playing-area{
		width:100%;
		height: 100%;
	}
}
